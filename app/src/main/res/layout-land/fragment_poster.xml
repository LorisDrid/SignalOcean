<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PostFragment"
    android:background="#A0A0A0">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/soleil"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttonmeteo"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/soleil"
            app:layout_constraintLeft_toLeftOf="parent"

            app:layout_constraintTop_toTopOf="parent"></ImageButton>

        <ImageButton
            android:id="@+id/nuage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttonmeteo"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/nuage"
            app:layout_constraintLeft_toRightOf="@+id/soleil"
            app:layout_constraintTop_toTopOf="parent"></ImageButton>

        <ImageButton
            android:id="@+id/pluie"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttonmeteo"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/pluie"
            app:layout_constraintLeft_toRightOf="@+id/nuage"
            app:layout_constraintTop_toTopOf="parent"></ImageButton>

        <ImageButton
            android:id="@+id/vent"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/buttonmeteo"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/vent"
            app:layout_constraintRight_toLeftOf="@id/orage"
            app:layout_constraintTop_toTopOf="parent"></ImageButton>

        <ImageButton
            android:id="@+id/orage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/buttonmeteo"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/orage"
            app:layout_constraintRight_toLeftOf="@+id/vague"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpeakableTextPresentCheck"></ImageButton>

        <ImageButton
            android:id="@+id/vague"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="72dp"
            android:background="@drawable/buttonmeteo"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/vague"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"></ImageButton>

        <TextView
            android:id="@+id/message"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="#e6e6e5"
            android:gravity="center"
            android:text=""
            android:textColor="#000"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.499"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_poster"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginBottom="72dp"
            android:background="@drawable/boutonposter"
            android:gravity="center"
            android:radius="25dp"
            android:stateListAnimator="@null"
            android:text="Poster"
            android:textColor="#fff"
            android:textColorHighlight="#fff"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.499"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageButton
            android:id="@+id/home"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="176dp"
            android:layout_marginBottom="72dp"
            android:background="@drawable/buttonmeteo"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/home"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintLeft_toLeftOf="parent"></ImageButton>

        <ImageButton
            android:id="@+id/user"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="176dp"
            android:layout_marginBottom="72dp"
            android:background="@drawable/buttonmeteo"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/user"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintRight_toRightOf="parent"></ImageButton>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>