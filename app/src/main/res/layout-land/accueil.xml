<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/fond_ecran">

    <TextView
        android:id="@+id/entete"
        android:layout_width="733dp"
        android:layout_height="108dp"
        android:background="@color/yellow"
        android:gravity="center_horizontal"
        android:text="Signal'Ocean"
        android:textColor="@color/black"
        android:textSize="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="123dp"
        android:layout_height="106dp"
        android:layout_marginRight="16dp"
        android:contentDescription="Description de l'image"
        android:foregroundGravity="center_horizontal"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="@id/entete"
        app:layout_constraintRight_toRightOf="@id/entete" />

    <Button
        android:id="@+id/naviguer"
        android:layout_width="177dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_button"
        android:gravity="center"
        android:text="Naviguer"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/entete"
        app:layout_constraintVertical_bias="0.071" />

    <Button
        android:id="@+id/se_connecter"
        android:layout_width="177dp"
        android:layout_height="100dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/rounded_button"
        android:gravity="center"
        android:text="Se Connecter"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>