<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/fond_ecran">

    <TextView
        android:id="@+id/entete"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="4dp"
        android:background="@color/yellow"
        android:gravity="left"
        android:text="Signal'Ocean"
        android:textColor="@color/black"
        android:textSize="100dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="172dp"
        android:layout_height="160dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="16dp"
        android:contentDescription="Description de l'image"
        android:foregroundGravity="center_horizontal"
        android:src="@drawable/logo"
        app:layout_constraintRight_toRightOf="@id/entete"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/naviguer"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="@drawable/rounded_button"
        android:gravity="center"
        android:text=" Naviguer "
        android:textColor="@color/black"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.475" />

    <Button
        android:id="@+id/se_connecter"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button"
        android:gravity="center"
        android:text=" Se Connecter "
        android:textColor="@color/black"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/naviguer"
        app:layout_constraintVertical_bias="0.047" />

</androidx.constraintlayout.widget.ConstraintLayout>