<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Poster"
    android:background="#70726e">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/soleil"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:background="@drawable/buttonmeteo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/soleil"

    ></ImageButton>
    <ImageButton
        android:id="@+id/nuage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:background="@drawable/buttonmeteo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/soleil"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/nuage"
        ></ImageButton>
    <ImageButton
        android:id="@+id/pluie"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:background="@drawable/buttonmeteo"
        app:layout_constraintLeft_toRightOf="@+id/nuage"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/pluie"
        ></ImageButton>
    <ImageButton
        android:id="@+id/vent"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:background="@drawable/buttonmeteo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/orage"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/vent"
        ></ImageButton>
    <ImageButton
        android:id="@+id/orage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:background="@drawable/buttonmeteo"
        app:layout_constraintRight_toLeftOf="@+id/temperature"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginRight="25dp"
        android:src="@drawable/orage"
        ></ImageButton>
    <ImageButton
        android:id="@+id/temperature"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:background="@drawable/buttonmeteo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginRight="25dp"
        android:src="@drawable/celsius"
        ></ImageButton>
        <TextView
            android:id="@+id/message"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="meteo"
            android:background="#A0A0A0"
            android:shadowColor="#000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:elevation="10dp"/>

        <Button
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@color/lightblue"
            android:layout_marginBottom="10dp"
            android:stateListAnimator="@null"
            android:radius="25dp"
            android:text="Poster"
            android:textSize="20dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>