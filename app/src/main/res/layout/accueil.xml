<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/fond_ecran">

    <TextView
        android:id="@+id/entete"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:textColor="@color/black"
        android:textSize="50dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/yellow"
        android:text="Signal'Ocean" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:foregroundGravity="center_horizontal"
        android:src="@drawable/logo"
        android:contentDescription="Description de l'image"
        app:layout_constraintRight_toRightOf="@id/entete"
        android:layout_marginRight="150dp"
        app:layout_constraintBottom_toBottomOf="@id/entete"/>

    <Button
        android:id="@+id/naviguer"
        android:text="Naviguer"
        android:textColor="@color/black"
        android:textSize="50dp"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:background="@drawable/rounded_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/entete"
        />
    <Button
        android:id="@+id/se_connecter"
        android:text="Se Connecter"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/rounded_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/naviguer"
        />

</androidx.constraintlayout.widget.ConstraintLayout>